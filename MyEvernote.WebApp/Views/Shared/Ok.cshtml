@using MyEvernote.WebApp.ViewModels
@model  OkViewModel
@{
    ViewBag.Title = Model.Title;
}


<link href="~/Content/login-register.css" rel="stylesheet" />


<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header</h1>
            </div>
            <div class="main-content">
                <div class="text-success">
                    <h2><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;&nbsp; @Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (string msg in Model.Item)
                        {
                            @msg<br />
                        }
                    </p>

                </div>

            </div>
        </div>
    </div>
</section>

@{ 

    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = " setTimeout(function () {  window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeOut + "); });";
    }

}

<script>

    $(function () {
         // loyut katmanında görünmesini istemediğimiz alanın clasını alarak görünmez kılıyoruz

      
      
           @Html.Raw(js);
        //kullanıcı bu sayfaya yönlendiğinde nereye tıklayamayacagını bilemez ise 3 saniye sonra anasayfaya yönlen
</script>

